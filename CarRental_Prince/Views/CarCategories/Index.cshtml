@model IEnumerable<CarRental_Prince.Models.CarCategory>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p><button class="btn btn-primary" onclick="location.href='@Url.Action("Create", "CarCategories")';return false;">Create</button></p>

<div class="tile">
    <h3 class="tile-title">Car Categories</h3>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    @Html.DisplayNameFor(model => model.Name)
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

